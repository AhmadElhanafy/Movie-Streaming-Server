FROM mcr.microsoft.com/dotnet/sdk:9.0 AS migration
WORKDIR /src

# Copy everything
COPY . .

# Restore + build
RUN dotnet restore ./Server/Api/Api.csproj
RUN dotnet build ./Server/Api/Api.csproj -c Release

# Install EF CLI
RUN dotnet tool install --global dotnet-ef
ENV PATH="$PATH:/root/.dotnet/tools"

WORKDIR /src
ENTRYPOINT ["dotnet", "ef"]
