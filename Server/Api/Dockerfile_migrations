# Use a single-stage Dockerfile for simplicity and to ensure the SDK is present
FROM mcr.microsoft.com/dotnet/sdk:9.0

# Set the working directory
WORKDIR /app

# Copy the project file and restore dependencies
COPY *.csproj ./
RUN dotnet restore

# Copy the rest of the application code
COPY . .

# Install the dotnet-ef tool
RUN dotnet tool install --global dotnet-ef

# Ensure the tool's location is in the PATH
ENV PATH="$PATH:/root/.dotnet/tools"

# Publish the application
RUN dotnet publish "Api.csproj" -c Release -o /app/publish

# Set the entrypoint to run the migration
ENTRYPOINT ["dotnet", "ef", "database", "update", "--no-build"]