# Stage 1: Build the application
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /app

# Copy the project file and restore dependencies
COPY *.csproj ./
RUN dotnet restore

# Copy the rest of the application code
COPY . .

# Publish the application
RUN dotnet publish "Api.csproj" -c Release -o /app/publish

# Stage 2: Migration stage, using the SDK image to ensure 'dotnet ef' is available
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS migration
WORKDIR /app

# Copy the published application from the build stage
COPY --from=build /app/publish .

# The entrypoint will now be able to run 'dotnet ef'
ENTRYPOINT ["dotnet", "ef", "database", "update", "--no-build"]